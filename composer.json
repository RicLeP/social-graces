{
    "name": "riclep/social-graces",
    "description": "A wrapper around Browsershot for managing dynamic social share images",
    "keywords": [
        "riclep",
        "social-graces"
    ],
    "homepage": "https://github.com/riclep/social-graces",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Richard Le Poidein",
            "email": "ric@sirric.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0",
	    "spatie/browsershot": "^3.52"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Riclep\\SocialGraces\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Riclep\\SocialGraces\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
	    "post-autoload-dump": [
		    "@php ./vendor/bin/testbench package:discover --ansi"
	    ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Riclep\\SocialGraces\\SocialGracesServiceProvider"
            ],
            "aliases": {
                "SocialGraces": "Riclep\\SocialGraces\\SocialGracesFacade"
            }
        }
    }
}
